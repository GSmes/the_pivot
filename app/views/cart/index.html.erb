<h1>Shopping Cart</h1>
<div class="table-responsive">
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th>Item</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @cart.contents.each do |item_id, quantity| %>
        <% item = CartItem.new(item_id, quantity) %>
        <tr id="item-<%= item.id %>">
          <td><%= item.title %></td>
          <td><%= item.description %></td>
          <td><%= item.quantity %></td>
          <td><%= item.price %></td>
          <td><%= button_to "Remove", cart_item_path(item), method: :delete, class: 'btn btn-danger btn-sm' %></td>
        </tr>
      <% end %>
        <td colspan="4" class="text-right">
          <strong>Total: <%= @cart.total_cost %></strong>
        </td>
      </tr>
    </tbody>
  </table>
</div>
<div class='col-md-12'>
  <%= link_to 'Back to All Items', items_path, class: 'col-md-2 btn btn-default' %>
</div>
