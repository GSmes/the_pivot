<h1>Shopping Cart</h1>
<div class="table-responsive">
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th>Item</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Unit Price</th>
        <th>Subtotal</th>
      </tr>
    </thead>
    <tbody>
      <% @cart.contents.each do |item_id, quantity| %>
        <% item = CartItem.new(item_id, quantity) %>
        <tr id="item-<%= item.id %>">
          <td><%= item.title %></td>
          <td><%= item.description %></td>
          <td>
            <%= form_for(item, url: cart_item_path(item), class: 'text-center') do |f| %>
              <%= f.label :quantity, "" %>
              <%= f.select :quantity, quantities, value: item.quantity %>
              <%= f.submit "Update Qty", class: 'btn btn-default btn-xs'%>
            <% end %>
          </td>
          <td><%= item.price %></td>
          <td><%= item.sub_total %></td>
        </tr>
      <% end %>
      <tr>
        <td colspan="4" class="text-right">
          <strong>Total: <%= @cart.total_cost %></strong>
        </td>
      </tr>
    </tbody>
  </table>
</div>
<div class='col-md-12'>
  <%= link_to 'Back to All Items', items_path, class: 'col-md-2 btn btn-default' %>
</div>
