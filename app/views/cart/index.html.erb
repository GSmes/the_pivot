<div class="page-content">
  <h1>Shopping Cart</h1>
<div class="table-responsive">
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th>Item</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.description %></td>
        <td><%= item.quantity %></td>
        <td><%= item.price %></td>
      </tr>
      <% end %>
      <tr>
        <td colspan="4" class="text-right">
          <strong>Total: <%= @cart.total_cost %></strong>
        </td>
      </tr>
    </tbody>
  </table>
</div>
<div class='col-md-12'>
  <%= link_to 'Back to All Items', items_path, class: 'col-md-2 btn btn-default' %>
</div>
</div>
