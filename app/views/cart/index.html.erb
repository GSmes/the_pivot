<h1>Shopping Cart</h1>
<div class="table-responsive">
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th>Item</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @cart.items.each do |item| %>
      <tr>
        <td><%= item.keys.first.title %></td>
        <td><%= item.keys.first.description %></td>
        <td><%= item.values.first %></td>
        <td><%= item.keys.first.price %></td>
      </tr>
      <% end %>
      <tr>
        <td colspan="4" class="text-right">
          <strong>Total: <%= @cart.total_cost %></strong>
        </td>
      </tr>
    </tbody>
  </table>
</div>
