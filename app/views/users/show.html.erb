<div class="page-content">
  <h1>Profile for <%= @user.username %></h1>
  <div class="well table-responsive col-md-6">
    <table class="table">
      <tr>
        <th>E-mail</th>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <th>Date Registered</th>
        <td><%= @user.date_registered %></td>
      </tr>
      <tr>
        <th>Orders Placed</th>
        <td><%= @user.orders.count %></td>
      </tr>
    </table>
  </div>
  <div class='col-md-12'>
    <%= link_to 'Edit My Profile', root_path, class: 'col-md-2 btn btn-info', disabled: 'disabled'%>
    <%= link_to 'View My Orders', orders_path, class: 'col-md-2 col-md-offset-1 btn btn-default' %>
  </div>
</div>
