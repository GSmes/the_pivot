<div class="page-content">
  <h1>Venues</h1>
  <% @venues.each do |venue| %>
    <div class='event' data-all="<%= venue.name %> <%= venue.city %> <%= venue.state %>">
      <div class ="well col-md-3 event-in-list" id="venue-<%= venue.id %>">
        <p>
          <%= image_tag(venue.image_path, alt: "#{venue.name} pic", class: 'img-thumbnail event-image') %>
        </p>
        <p>
          Venue: <%= venue.name %>
        </p>
        <p>
          Location: <%= venue.location %>
        </p>
        <%= content_tag :div do %>
          <%= link_to "View Venue", venue_path(venue), class: "center_button btn btn-primary" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
